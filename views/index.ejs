<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Truth Table</title>
</head>
<body>
  <h1>Truth Table for Z = A(B'C' + BC)</h1>
  <table border="1">
    <thead>
      <tr>
        <th>A</th>
        <th>B</th>
        <th>C</th>
        <th>B'</th>
        <th>C'</th>
        <th>B'C'</th>
        <th>BC</th>
        <th>B'C+BC</th>
        <th>Z</th>
      </tr>
    </thead>
    <tbody>
      <% truthTable.forEach(entry => { %>
        <tr>
          <td><%= entry.a ? 1 : 0 %></td>
          <td><%= entry.b ? 1 : 0 %></td>
          <td><%= entry.c ? 1 : 0 %></td>
          <td><%= entry.bPrime ? 1 : 0 %></td>
          <td><%= entry.cPrime ? 1 : 0 %></td>
          <td><%= entry.bCPrime ? 1 : 0 %></td>
          <td><%= entry.bC ? 1 : 0 %></td>
          <td><%= entry.bCplusbc ? 1 : 0 %</td>
          <td><%= entry.result ? 1 : 0 %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</body>
</html>
